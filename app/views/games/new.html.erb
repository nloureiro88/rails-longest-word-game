<h1>Longest Word Game</h1>

<h2>
  <% @grid.each do |letter| %>
    <span><%= letter %></span>
  <% end %>
</h2>

<form action="score" method="post">
  <input type="text" name="word" placeholder="Insert longest word, fast!!!">
  <input type="submit" value="Send">
  <%= hidden_field_tag :time_start, @start %>
  <%= hidden_field_tag :grid, @grid %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
